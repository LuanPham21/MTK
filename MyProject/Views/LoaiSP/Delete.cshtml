@model MyProject.LoaiSanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}

<h3 class="text-center lead mb-3 font-weight-bold" style="font-size: 36px; text-shadow: 0 0 8px rgba(0,0,0,0.2)" data-aos="flip-right">
    Xóa danh sách loại sản phẩm
</h3>

@using (Html.BeginForm())
{
    <div class="form-group">

        <div class="display-label">
            <p class="col-md-10" style="font-weight:bold">Tên loại sản phẩm:</p>
        </div>
        <div class="display-field col-md-10">
            @Html.DisplayFor(model => model.TenLoaiSP, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group ">
        <div class="col-md-offset-5 col-sm-offset-4 col-sm-5">
            <input type="submit" value="Xóa" class="btn btn-primary" />
        </div>
    </div>
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            <a class="btn btn-info" href="@Url.Action("Index","loaisp")">Quay lại</a>
        </div>
    }
